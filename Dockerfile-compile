FROM arm64v8/rust:latest
WORKDIR /app
RUN mkdir -p /app/src
RUN echo "fn main() {println!(\"if you see this, the build broke\")}" > src/main.rs
COPY ./Cargo.toml ./
COPY ./Cargo.lock ./
COPY ./benches ./benches
# For some reason this is failing, but should let us compile! https://github.com/docker/build-push-action/issues/621#issuecomment-1331455045
ENV CARGO_NET_GIT_FETCH_WITH_CLI true
RUN cargo build --release -j 3

COPY ./static ./static
COPY ./blu.txt ./

COPY ./src ./src
RUN cargo build --release -j 3

FROM arm64v8/debian:latest

RUN apt-get update \
 && apt-get install -y --no-install-recommends ca-certificates \
 && update-ca-certificates \
 && apt-get clean autoclean \
 && apt-get autoremove --yes \
 && rm -rf /var/lib/{apt,dpkg,cache,log}/

WORKDIR /app
RUN mkdir -p /app/target/release
COPY --from=0 /app/target/release/dns /app/target/release/
COPY --from=0 /app/blu.txt /app/
COPY --from=0 /app/static/ /app/static/

EXPOSE 53/udp
ENTRYPOINT ["./target/release/dns"]
